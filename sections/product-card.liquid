{% assign product = section.settings.product %}

{% form 'product', product %}
    <input type="hidden" name="id" value="{{ product.id }}">
    <div class="px-12 pt-16 flex flex-col items-center w-1/3">
      <div class="w-52">
        <img
          src="{{ product.featured_image |  image_url: width: "200px" }}"
          class="w-full h-auto objec-cover"
          height="100%"
          width=" 100%">
      </div>
      <p class="py-4">{{ product.title }} One</p>
      <button
        class="bg-black text-white"
        type="submit"
        name="add">
        Add to Cart
      </button>
    </div>
{% endform %}

{% schema %}
{
  "name": "Product Card",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    }
  ],
  "presets": [{ "name": "Product Card" }]
}
{% endschema %}
