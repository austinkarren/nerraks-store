{% comment %} Accepts blade_list, a section setting {% endcomment %}
<p class="mx-auto pb-5">Popular Saw Blades</p>
<div class="flex ">
  {% for item in blade_list %}
    <a href="{{ item.url }}">
      <div class="flex flex-col mr-12 max-w-[225px]">
        <img
          class="w-full h-auto object-cover"
          src="{{ item.featured_image | image_url }}"
          width="100%"
          height="100%"
        >
        <p class="text-center font-bold text-sm pt-4">{{ item.title }}</p>
      </div>
    </a>
  {% endfor %}
</div>
